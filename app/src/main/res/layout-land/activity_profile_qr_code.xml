<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background_splash"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".ProfileQrCodeActivity">

    <!-- Colonne gauche : QR Code -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Colonne droite : Textes + bouton -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partagez_l_application"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#00757D"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanner_qrcode"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#315C64"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:minWidth="200dp"
            android:text="@string/partager_le_qr_code"
            android:textSize="16sp"
            android:textColor="@color/buttonTextColor"
            android:background="@drawable/button_rounded"
            android:gravity="center"
            app:backgroundTint="@color/buttonColor" />
    </LinearLayout>
</LinearLayout>