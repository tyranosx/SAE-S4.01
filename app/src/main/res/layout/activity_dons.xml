<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:padding="20dp"
    android:gravity="top|center_horizontal"
    tools:context=".ConnexionActivity">

    <!-- Bouton retour -->
    <ImageButton
        android:id="@+id/btn_retour"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_back"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/retour"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="#008F99"/>

    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <!-- Champ Recherche -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/chercher_24" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/chercher"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#A0A0A0"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Mot de passe oublié positionné sous les inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_connexion"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_rounded"
                android:gravity="center"
                android:maxWidth="320dp"
                android:minWidth="250dp"
                android:text="@string/aiderasso"
                android:textColor="@color/buttonTextColor"
                android:textSize="16sp"
                app:backgroundTint="@color/buttonColor"
                tools:ignore="RtlHardcoded" />

            <!-- Texte du choix de l'asso -->
            <TextView
                android:id="@+id/txt_inscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choisirasso"
                android:textSize="20sp"
                android:textColor="#00757D"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id="@+id/lvEquipements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:dividerHeight="3dp"
                android:padding="8dp"/>


        </LinearLayout>
</LinearLayout>

