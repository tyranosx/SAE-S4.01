<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:padding="20dp"
    android:gravity="top|center_horizontal"
    tools:context=".LoginChoiceActivity">

    <!-- Bouton retour -->
    <ImageButton
        android:id="@+id/btn_retour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_back"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/retour"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="#008F99"/>

    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Champ de recherche -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@drawable/chercher_24" />

        <EditText
            android:id="@+id/input_recherche"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="@string/chercher"
            android:inputType="text"
            android:textColorHint="#A0A0A0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Bouton d'aide -->
    <Button
        android:id="@+id/btn_aider_association"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:maxWidth="320dp"
        android:minWidth="250dp"
        android:text="@string/aiderasso"
        android:textColor="@color/buttonTextColor"
        android:textSize="16sp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />

    <!-- Texte du choix de l'asso -->
    <TextView
        android:id="@+id/txt_choisir_association"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choisirasso"
        android:textSize="20sp"
        android:textColor="#00757D"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <!-- RecyclerView pour afficher la liste des associations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAssociations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
