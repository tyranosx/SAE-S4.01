<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:padding="20dp"
    android:gravity="center">

    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/btn_profil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_back"
        android:src="@drawable/utilisateur_24"
        android:contentDescription="@string/retour"
        android:elevation="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:backgroundTint="#D1D1D1"
        android:layout_gravity="top|end"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Texte d'information -->
    <TextView
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/periodicite"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <!-- Bouton retour -->
    <ImageButton
        android:id="@+id/btn_retour"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_back"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/retour"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="#008F99"/>



    <!-- Boutons -->
    <Button
        android:id="@+id/btn_don_mensuels"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="250dp"
        android:maxWidth="320dp"
        android:layout_gravity="center"
        android:text="@string/donmensuel"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />



    <Button
        android:id="@+id/btn_don_annuels"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="250dp"
        android:maxWidth="320dp"
        android:layout_gravity="center"
        android:text="@string/donsannuel"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />

    <!-- Espace en bas -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
