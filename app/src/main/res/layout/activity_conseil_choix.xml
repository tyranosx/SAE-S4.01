<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:padding="20dp"
    android:gravity="top|center_horizontal"
    tools:context=".ConseilChoixActivity">

    <!-- Bouton retour -->
    <ImageButton
        android:id="@+id/btn_retour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_back"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/retour"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="#008F99"/>

    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- Bouton de profil sous forme de bulle flottante -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_profil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/utilisateur_24"
            android:contentDescription="@string/retour"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="#4A9B9F"
            app:fabSize="normal"
            app:elevation="8dp"
            app:maxImageSize="40dp"
            app:borderWidth="0dp"
            app:shapeAppearanceOverlay="@style/RoundedFAB"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Barre de recherche -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:iconifiedByDefault="false"
        android:queryHint="Rechercher une association"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView pour afficher les associations par catÃ©gorie -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAssociations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>