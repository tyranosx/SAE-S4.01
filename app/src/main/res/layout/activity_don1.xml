<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:padding="20dp"
    android:gravity="center">

    <!-- Bouton retour (FlÃ¨che) -->
    <ImageButton
        android:id="@+id/btn_retour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_back"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/retour"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="#008F99"/>

    <!-- Espace en haut -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bouton de profil sous forme de bulle flottante -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_profil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/utilisateur_24"
            android:contentDescription="@string/retour"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="#4A9B9F"
            app:fabSize="normal"
            app:elevation="8dp"
            app:maxImageSize="40dp"
            app:borderWidth="0dp"
            app:shapeAppearanceOverlay="@style/RoundedFAB"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Texte du nom de l'association -->
    <TextView
        android:id="@+id/nom_association"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nom_de_l_association"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Texte d'information -->
    <TextView
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donrecurent"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <!-- Boutons -->
    <Button
        android:id="@+id/btn_don_oui"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="250dp"
        android:maxWidth="320dp"
        android:layout_gravity="center"
        android:text="@string/oui"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btn_don_non"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="250dp"
        android:maxWidth="320dp"
        android:layout_gravity="center"
        android:text="@string/non"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/buttonColor"
        tools:ignore="RtlHardcoded" />

    <!-- Espace en bas -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>