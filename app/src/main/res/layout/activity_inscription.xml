<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:padding="20dp"
    android:gravity="top|center_horizontal"
    tools:context=".InscriptionActivity">

    <!-- Bouton retour -->
    <ImageButton
        android:id="@+id/btn_retour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_back"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/retour"
        android:elevation="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:backgroundTint="#008F99"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Ajout d'un ScrollView pour éviter que le bouton soit caché -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:fillViewport="true">

        <!-- Rectangle contenant les inputs et le bouton -->
        <LinearLayout
            android:id="@+id/inscription_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rectangle_background"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp">

            <!-- Titre "Créer un compte" -->
            <TextView
                android:id="@+id/title_inscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creer_compte"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#00757D"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <!-- Champs d'inscription -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Champ Prénom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_prenom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/prenom"
                        android:textColor="#007980"
                        android:textColorHint="#7A7A7A"
                        android:inputType="text"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Champ Nom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_nom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/nom"
                        android:textColor="#007980"
                        android:textColorHint="#7A7A7A"
                        android:inputType="text"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Champ Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/email"
                        android:textColor="#007980"
                        android:textColorHint="#7A7A7A"
                        android:inputType="textEmailAddress"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Champ Date de naissance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_date_naissance"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/date_naissance"
                        android:textColor="#007980"
                        android:textColorHint="#7A7A7A"
                        android:inputType="none"
                        android:focusable="false"
                        android:background="@null"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- Champ Mot de passe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_background"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_password"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"/>

                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/mot_de_passe"
                        android:textColor="#007980"
                        android:textColorHint="#7A7A7A"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Bouton S'inscrire -->
                <Button
                    android:id="@+id/btn_inscription"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:minWidth="250dp"
                    android:maxWidth="320dp"
                    android:layout_gravity="center"
                    android:text="@string/inscription"
                    android:textSize="16sp"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:backgroundTint="@color/buttonColor"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
